{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./global.d.ts"]
  },
  "include": ["./src", "./global.d.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "jsx": "react-jsx"
    }
  }
}
